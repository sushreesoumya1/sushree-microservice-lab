<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- DEV: keep your plain pattern -->
    <springProfile name="dev">
        <property name="CONSOLE_LOG_PATTERN"
                  value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSX} %-5level --- [%thread] %logger{36} : [corr=%X{correlationId}] %msg%n"/>
        <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- NON-DEV (jar/prod/k8s): JSON -->
    <springProfile name="!dev">
        <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <threadName/>
                    <loggerName/>
                    <message/>
                    <mdc/> <!-- this will include correlationId -->
                    <stackTrace/>
                </providers>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="JSON"/>
        </root>
    </springProfile>

</configuration>
